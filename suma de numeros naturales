#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

int main()
{
int suma,i,N;
cout<< "Ingresar el valor de N: ";
cin>> N;
suma=0;
for (i=1;i<=N;i++)
    suma=suma+i;
cout<< "La suma de los"<< N <<" primeros numeros naturales es: "<<suma;
getch();
return 0;
}
