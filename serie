#include "stdafx.h"
#include <iostream> 
#include "conio.h"
#include "math.h"

using namespace std;
void main ()

{
float n,x,s,i,p,si;
cout<<"Ingrese el valor de n:  ";
cin>>n;
cout<<"Ingrese el valor de x:  ";
cin>>x;

si=1;
p=1;
s=5;
for(i=0; i<=n; i++)
{
	p=p*(i+1);
	s=s+si*(pow(x,i))/p;
	si=si*-1;
}
cout<<"La suma es:  "<<s;


getch();
}
